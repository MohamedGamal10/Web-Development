@model Mazr3a.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h3>تعاملات المخازن</h3>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Material_Name" class="control-label"></label>
                <select asp-for="Material_Name" class="form-select" aria-label="Default select example" style="padding-right:10%" asp-items="new SelectList(ViewBag.Material_Name)">
                    <option selected>-----</option>
                </select>
                <span asp-validation-for="Material_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Store_Name" class="control-label"></label>
                <select asp-for="Store_Name"  class="form-select" aria-label="Default select example" style="padding-right:10%" asp-items="new SelectList(ViewBag.Store_Name)">
                    <option selected>-----</option>
                </select>
                <span asp-validation-for="Store_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="اضافة" class="btn btn-primary"  />
                <a asp-action="Index" class="btn btn-primary">رجوع</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
