@model Mazr3a.Models.Store

@{
    ViewData["Title"] = "Create";
}

<h3>المخازن</h3>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Store_Name" class="control-label"></label>
                <input asp-for="Store_Name" class="form-control" />
                <span asp-validation-for="Store_Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="اضافة" class="btn btn-primary" />
                <a asp-action="Index"class="btn btn-primary" style="margin-top=10px">رجوع</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
